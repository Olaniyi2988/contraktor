{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",       
    "moduleResolution": "node",
    "jsx": "react-jsx",             
    "esModuleInterop": true,        
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true, 
    "allowJs": true,
    "verbatimModuleSyntax": false,
    "outDir": "./dist",
    "types": ["jest", "@testing-library/jest-dom"]
  },
  "include": ["src"]
}
